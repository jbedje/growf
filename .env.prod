# Production Environment Configuration for GROWF
# Contabo VM Deployment - growf2.cipme.ci

# Database Configuration
DB_USER=growf_user
DB_PASSWORD=your_secure_db_password_here
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# JWT Secrets (MUST be changed for production)
JWT_SECRET=your_very_secure_jwt_secret_here_at_least_32_characters_long
JWT_REFRESH_SECRET=your_very_secure_refresh_secret_here_at_least_32_characters_long

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SMTP Configuration (smtp2go)
SMTP_PASSWORD=Cipme@2024

# Port Configuration
BACKEND_PORT=3005
FRONTEND_PORT=80

# Nginx Ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Frontend API URL (Production)
VITE_API_URL=https://growf2.cipme.ci/api

# SSL Certificate Paths (Let's Encrypt)
SSL_CERT_PATH=/etc/letsencrypt/live/growf2.cipme.ci/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/growf2.cipme.ci/privkey.pem

# Docker Compose Profile
COMPOSE_PROFILES=with-nginx